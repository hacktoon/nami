{
  "name": "nami",
  "type": "module",
  "version": "0.1.0",
  "description": "Nami: world generator",
  "author": "Karlisson Bezerra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hacktoon/nami/issues"
  },
  "homepage": "https://github.com/hacktoon/nami",
  "scripts": {
    "dev": "PARCEL_WORKERS=0 parcel serve src/index.html --dist-dir build",
    "build": "PARCEL_WORKERS=0 parcel build src/index.html --dist-dir build --public-url ./ --no-source-maps",
    "test": "npx jest --watchAll --verbose --maxWorkers=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hacktoon/nami.git"
  },
  "dependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "parcel": "^2.8.2",
    "process": "^0.11.10"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^/(.*)$": "<rootDir>/src/$1"
    }
  }
}
