{
  "name": "nami",
  "version": "0.1.0",
  "description": "A world generator",
  "main": "index.js",
  "author": "Karlisson Bezerra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hacktoon/nami/issues"
  },
  "homepage": "https://github.com/hacktoon/nami",
  "scripts": {
    "dev": "parcel src/index.html -d build",
    "build": "parcel build src/index.html -d build --public-url ./ --no-source-maps",
    "test": "jest --watchAll --verbose --maxWorkers=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hacktoon/nami.git"
  },
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-preset-react": "^6.24.1",
    "parcel-bundler": "^1.9.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "jest": "^26.6"
  },
  "alias": {
    "lib": "./src/lib",
    "ui": "./src/ui",
    "model": "./src/model"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^/(.*)$": "<rootDir>/src/$1"
    }
  }
}
